<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pers.sy.sqloj.mapper.TestcaseMapper">

    <resultMap id="testcaseDO" type="pers.sy.sqloj.entity.TestcaseVO">
        <id column="id" property="id"/>
        <result column="label" property="content"/>
        <result column="abstract" property="abstract"/>
        <result column="content" property="content"/>
        <result column="type_id" property="typeID"/>
        <result column="type_name" property="typeName"/>
    </resultMap>

    <sql id="selectAll">
        select testcase.id,
               label,
               abstract,
               content,
               type_id,
               judge_type.name as type_name
        from testcase
        left join judge_type on testcase.type_id = judge_type.id
    </sql>

    <select id="list" resultMap="testcaseDO">
        <include refid="selectAll"/>
    </select>

    <select id="getByID" resultMap="testcaseDO">
        <include refid="selectAll"/>
        where testcase.id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into `testcase`
        values (null, #{label}, #{abstract}, #{content}, #{typeID})
    </insert>

    <update id="update">
        update `testcase` t
        set t.label    = #{label},
            t.abstract = #{abstract},
            t.content  = #{content},
            t.type_id  = #{typeID}
        where t.id = #{id}
    </update>

    <delete id="delete">
        delete from `testcase` where id = #{id}
    </delete>

</mapper>
