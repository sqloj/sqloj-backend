<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pers.sy.sqloj.mapper.JudgeServerMapper">

    <resultMap id="JudgeServerDO" type="pers.sy.sqloj.entity.JudgeServerDO">
        <id column="id" property="id"/>
        <result column="url" property="url"/>
        <result column="password" property="password"/>
        <result column="judge_type_id" property="typeID"/>
        <result column="type_name" property="typeName"/>
    </resultMap>

    <resultMap id="PingVO" type="pers.sy.sqloj.entity.PingVO">
        <result column="id" property="typeID"/>
        <result column="name" property="typeName"/>
    </resultMap>


    <!--    <sql id="selectAll">-->
    <!--        select judge.id,-->
    <!--               `url`,-->
    <!--               `password`,-->
    <!--               judge_type_id,-->
    <!--               judge_type.name as type_name,-->
    <!--              judge_manage.user_id-->
    <!--        from judge-->
    <!--                 left join judge_type on judge.judge_type_id = judge_type.id-->
    <!--                 left join judge_manage on judge.id = judge_manage.judge_id-->
    <!--    </sql>-->
    <sql id = "selectAll">
        select *
        from judge_detail
    </sql>

    <select id="list" resultMap="JudgeServerDO">
        <include refid="selectAll"/>
    </select>


    <select id="support" resultMap="JudgeServerDO">
        <include refid="selectAll"/>
        group by judge_type_id
        order by judge_type_id
    </select>


    <select id="allSupport" resultMap="PingVO">
        select *
        from judge_type
    </select>

    <select id="getByID" resultMap="JudgeServerDO">
        <include refid="selectAll"/>
        where id = #{id}
    </select>

    <select id="filterByTypeID" resultMap="JudgeServerDO">
        <include refid="selectAll"/>
        where judge_type_id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into `judge`
        values (null, #{url}, #{password}, #{typeID})
    </insert>
    <insert id="insert2">
        insert into `judge_manage`
        values (#{user_id}, #{id})
    </insert>
    <update id="update">
        update `judge` t
        set t.url      = #{url},
            t.password = #{password},
            t.judge_type_id  = #{typeID}
        where t.id = #{id}
    </update>

    <delete id="delete">
        delete
        from `judge`
        where id = #{id}
    </delete>
    <delete id="delete2">
        delete
        from `judge_manage`
        where judge_id = #{id}
    </delete>
</mapper>
